<% provide(:title, 'All Bases') %>
<% provide(:button_text, '編集する') %>
<h1>拠点一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-bordered table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th class="center">拠点番号</th>
        <th class="center">拠点名</th>
        <th class="center">拠点種類</th>
      </tr>
    </thead>
    <% @bases.each do |base| %>
      <tbody>
        <th><%= link_to "修正", edit_basis_path(base), remote: true, class: "btn btn-md btn-primary" %></th>
        <th class="center"><%= link_to "削除", base, method: :delete, class: "btn btn-md btn-primary",
                data: { confirm:"削除してよろしいですか？" } %>
        </th>
        <th class="center"><%= base.id %></th>
        <th class="center"><%= base.base_name %></th>
        <th class="center"><%= base.attendance_type %></th>
      </tbody>
    <% end %>
  </table>
  <table class="table table-bordered table-condensed table-hover" id="table-users">
    <tbody>
      <tr>
        <th>
          <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-md btn-primary" %>
        </th>
      </tr>
    </body>
  </table>
</div>

<!--モーダルウインドウ表示-->
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>